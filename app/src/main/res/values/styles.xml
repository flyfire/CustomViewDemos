<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="text_flag_01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/flowlayout_text_background</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxshowlines" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CommonTestingView">
        <attr name="lowStartColor" format="color"/>
        <attr name="lowEndColor" format="color"/>
        <attr name="highStartColor" format="color"/>
        <attr name="highEndColor" format="color"/>
        <attr name="midValue" format="float"/>
        <attr name="valueUnit" format="string"/>
        <attr name="lowText" format="string"/>
        <attr name="highText" format="string"/>
    </declare-styleable>

    <declare-styleable name="DetectTouchEventView">
        <attr name="consumeDown" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="OnlineStatusAvatarView">
        <attr name="innerDotColor" format="color"/>
        <attr name="innerDotRadius" format="dimension"/>
        <attr name="outerDotColor" format="color"/>
        <attr name="outerDotRadius" format="dimension"/>
        <attr name="shouldDrawDot" format="boolean"/>
    </declare-styleable>
</resources>
